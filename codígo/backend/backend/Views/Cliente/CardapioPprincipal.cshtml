@model IEnumerable<backend.Models.Produto>

@{
    ViewData["Title"] = "Cardapio";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}


<head>
    <title>@ViewData["Title"] - Prato Principal</title>
    <style>
        .body:{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border: 2px solid black;
            min-width: 230px;
            max-width: 420px;
            padding:0;
            margin:0;
        }

        .navCardapio{
            border: 2px solid green;
            width: 100%;
            display:flex;
            align-items:center;
            justify-content:center;
            margin:0;
            padding:0;
        }

        .imagemApresentation{
            background-size:cover;
            width:100%;
            display: block;
        }

        .image-text{
            display:flex;
            align-items:center;
            justify-content:center;
            font-size: 25px;
            text-align: center;
            position: absolute;
            color:aliceblue;
            font-weight:700;
        }

        .navTipos{
            width:100%;
            height: 50px;
            border: 3px solid #000;
        }
        .main{
            margin: 5px;
            padding: 5px;
            display: flex;
            flex-direction: row;
            justify-content:center;
            align-content: center;
            flex-grow:1;
            flex-flow: wrap;
            gap:5px;
            border: 3px solid #900;
            overflow:hidden;
            overflow-y:auto;
        }
        .card{
            width:126px;
            height:126px;
            border-radius:10px;
            border: 2px solid #090;
            display: flex;
            flex-direction: column;
        }
        .imgCard{
            border: 1px solid #900;
            border-top-left-radius:8px;
            border-top-right-radius:8px;
            width: 100%;
            height: 70%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .textCard{
            border: 1px solid #009;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            width: 100%;
            height: 30%;
            display: flex;
            align-items: center;
            text-align: center;
            justify-content:center;
        }
    </style>

</head>
<body class="body">
    <nav class="navCardapio">
        <img class="imagemApresentation" src="~/assets/ToWebdesign/BkgOrange.svg" />
        <p class="image-text">Cardápio Digital</p>
    </nav>
    <header>
        <nav class="navTipos">
            <p>ESPAÇO PARA SEGUNDO NAV BAR</p>
        </nav>
    </header>
    <main class="main">
        @foreach ( var item in Model)
        {
            <div class="card">
                <div class="imgCard">
                    <img src="~/assets/@{
                    @item.Imagem}"
                    alt="Produto: @item.Nome"
                    width="80%" height="80%"/>
                </div>
                
                <a class="textCard"> @item.Nome</a>
            </div>
        }
    </main>
    

    
</body>
