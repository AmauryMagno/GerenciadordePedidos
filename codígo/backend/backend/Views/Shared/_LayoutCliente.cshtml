@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyEats </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .options{
            min-height:83.9vh;
            max-width: 420px;
            min-width: 230px;
        }
        .color-wine{
            background: #AF3333;
        }

        a {
            color: #b6ff00;
        }
        li{
            list-style-type: none
        }
        body{
            display: flex;
            flex-direction:column;
            align-items: center;
            justify-content: center;
            border:2px solid black;
            min-width: 230px;
            max-width: 420px;
        }
        .header{
            width: 100%;
        }

        }
        .containerNav{
            width:100%;
        }

        .containerDiv{
            display:flex;
        }

        .containerUl{
            display: flex;
            flex-direction: row;
            margin:10px;
            padding: 5px;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            flex-flow: wrap;
            gap:10px;
        }
        .containerUlFooter{
            justify-content: space-evenly;
        }

        .footer{
            width:100%;
        }
        </style>
</head>
<body>
    <header class="color-wine header">
        <nav class="containerNav">
            <div class="containerDiv">
                <ul class="containerUl">
                    <li class="btn btn-outline-dark">
                        <a>Início</a>
                    </li>
                    <li class="btn btn-outline-dark">
                        <a>Cardápio</a>
                    </li>
                    <li class="btn btn-outline-dark">
                        <a>Pedidos</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="options">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" color-wine footer">
        <nav class="containerNav">
            <div class="containerDiv">
                <ul class="containerUl containerUlFooter">
                    <li class="btn btn-outline-success">
                        <a>Cardápio</a>
                    </li>
                    <li class="btn btn-outline-warning">
                        <a>Pedido</a>
                    </li>
                </ul>
            </div>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
